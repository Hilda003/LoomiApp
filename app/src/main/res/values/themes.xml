<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Loomi" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>
<!--        <item name="colorBackground">@color/white</item>-->
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/dark_green</item>
    </style>

    <style name="Theme.Loomi" parent="Base.Theme.Loomi" />


<!--    custom search bar -->
    <style name="CustomSearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="shapeAppearance">
            @style/CustomShapeAppearance
        </item>
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AnswerCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AnswerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/dark_green</item>

    </style>

    <!-- Style untuk CardView pada Settings -->
    <style name="SettingsCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Style untuk item setting (RelativeLayout) -->
    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <!-- Style untuk Icon pada item setting -->
    <style name="SettingIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- Style untuk Text pada item setting -->
    <style name="SettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toEndOf">@+id/icon</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>


</resources>