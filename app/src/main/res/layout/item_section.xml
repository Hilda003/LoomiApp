<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="8dp">

    <!-- Number -->
    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_number"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvMaterialTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Variabel"
        android:textColor="@color/dark_green"
        android:textSize="16sp"

        app:layout_constraintStart_toEndOf="@id/tvNumber"
        app:layout_constraintEnd_toStartOf="@id/icLock"
        app:layout_constraintTop_toTopOf="@id/tvNumber"
        app:layout_constraintBottom_toBottomOf="@id/tvNumber"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/icLock"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_lock"
        android:background="@drawable/bg_circle"
        android:scaleType="centerInside"
        android:padding="3dp"
        android:contentDescription="locked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvNumber"
        app:layout_constraintBottom_toBottomOf="@id/tvNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>
